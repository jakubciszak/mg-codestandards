{
    "name": "jakubciszak/mg-codestandards",
    "description": "Code styles for Magento",
    "autoload": {
        "psr-4": {
            "MG1\\": "mg1/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "require": {
        "php": ">=5.4.0",
        "magento-ecg/coding-standard": ">=3.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "authors": [
        {
            "name": "Jakub Ciszak",
            "email": "j.ciszak@gmail.com"
        }
    ],
    "scripts": {
        "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../..,../../../vendor/magento-ecg/coding-standard",
        "post-update-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../..,../../../vendor/magento-ecg/coding-standard"
    }
}
