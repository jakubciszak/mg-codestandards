{
    "name": "jakubciszak/mg-codestandards",
    "description": "Code styles for Magento",
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "require": {
        "php": ">=5.4.0",
        "magento-ecg/coding-standard": ">=3.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "authors": [
        {
            "name": "Jakub Ciszak",
            "email": "j.ciszak@gmail.com"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "cp -rf vendor/magento-ecg/coding-standard/Ecg ./",
            "cp -rf vendor/magento-ecg/coding-standard/EcgM2 ./"
        ],
        "post-autoload-dump": [
            "MyVendor\\MyClass::postAutoloadDump"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('config/local-example.php', 'config/local.php');\""
        ]
    }
}
